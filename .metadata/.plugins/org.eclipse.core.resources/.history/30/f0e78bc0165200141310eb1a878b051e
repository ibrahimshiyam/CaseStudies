\documentclass{article}
\usepackage{czt}

\begin{document}
\begin{zsection}
  \SECTION HRrestrict \parents standard\_toolkit
\end{zsection}


\begin{zed}
  [ EMP , EMPDETAIL]
\end{zed}

\begin{axdef}
	employees : \power EMP		\\
  	hrstaff   : \power EMP		\\
\end{axdef}

\begin{schema}{State}
  empDet : EMP \pfun EMPDETAIL; iEmp, iReq:EMP
\end{schema}

\begin{schema}{Init}
  State~'
\end{schema}


\begin{schema}{getRequester}
  \Xi State					\\
  emp? : EMP				\\
  req? : EMP				\\ 
\where
	emp ? 
  iEmp = emp?; iReq = req?
\end{schema}

\begin{schema}{getEmployeeDetail}
  	\Xi State					\\
	detail! : EMPDETAIL
\where
  req? \in \dom empDet	\land (detail! = empDet\ emp?) \\
\end{schema}

\begin{schema}{hide}
  \Xi State					\\
  detail! : EMPDETAIL		\\
\where
  req? \in \dom empDet	\land (detail! = empDet\ emp?) \\
\end{schema}



